# Security Configuration
# Copy this file to .env and modify the values according to your needs

# Session Security
SESSION_SECRET=change-this-to-a-secure-random-string
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_IP=100     # Maximum requests per IP
RATE_LIMIT_MAX_USER=1000  # Maximum requests per authenticated user

# Request Limits
MAX_PAYLOAD_SIZE=10kb
MAX_PARAMETER_COUNT=100
REQUEST_TIMEOUT=30000     # 30 seconds in milliseconds

# CORS Settings
TRUSTED_ORIGINS=http://localhost:8080,http://127.0.0.1:62480
CORS_MAX_AGE=86400       # 24 hours in seconds

# Crypto Settings
CRYPTO_SALT_ROUNDS=12
CRYPTO_KEY_LENGTH=32
CRYPTO_ALGORITHM=sha256

# Content Security Policy
# Comma-separated lists for each directive
CSP_SCRIPT_SRC=self
CSP_STYLE_SRC=self,unsafe-inline
CSP_IMG_SRC=self,data:,https:
CSP_CONNECT_SRC=self
CSP_FONT_SRC=self,https:,data:

# Security Headers
HSTS_MAX_AGE=31536000    # 1 year in seconds
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Blockchain-Specific Security
BLOCK_VERIFICATION_TIMEOUT=5000  # 5 seconds in milliseconds
MAX_TRANSACTION_SIZE=100kb
MAX_BLOCK_SIZE=1mb
MINING_RATE_LIMIT=10     # Maximum mining requests per minute
