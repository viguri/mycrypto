{
  "name": "mycrypto",
  "version": "1.0.0",
  "description": "A simple blockchain implementation with Docker support and environment validation",
  "type": "module",
  "main": "src/server.js",
  "scriptComments": {
    "app": "Application scripts for local development and production",
    "test": "Testing and coverage scripts",
    "clean": "Cleanup scripts for various components",
    "prepare": "Environment preparation scripts",
    "docker": "Docker-related scripts for different environments",
    "validate": "Environment validation scripts"
  },
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "dev:debug": "NODE_ENV=development DEBUG=mycrypto:* nodemon src/server.js",
    "test": "NODE_ENV=test DISABLE_LOGGING=true NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --detectOpenHandles --forceExit --config jest.config.js",
    "test:watch": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch --config jest.config.js",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage --config jest.config.js",
    "test:e2e": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.config.js --testMatch='**/*.e2e.test.js'",
    "clean": "rm -rf node_modules",
    "clean:full": "yarn clean && rm yarn.lock",
    "clean:logs": "rm -rf logs/*",
    "clean:docker": "docker system prune -f && docker volume prune -f",
    "reinstall": "yarn clean && yarn install",
    "prepare:dev": "NODE_ENV=development yarn install",
    "prepare:prod": "NODE_ENV=production yarn install --production",
    "docker:init": "cp docker/env/development.env.example docker/env/.env.development && cp docker/env/production.env.example docker/env/.env.production && cp docker/env/test.env.example docker/env/.env.test",
    "docker:dev": "docker compose --env-file docker/env/.env.development up",
    "docker:dev:build": "docker compose --env-file docker/env/.env.development up --build",
    "docker:prod": "docker compose -f docker-compose.cli.yml --env-file docker/env/.env.production up -d",
    "docker:prod:build": "docker compose -f docker-compose.cli.yml --env-file docker/env/.env.production up -d --build",
    "docker:test": "docker compose --env-file docker/env/.env.test up",
    "docker:test:build": "docker compose --env-file docker/env/.env.test up --build",
    "docker:stop": "docker compose down",
    "docker:stop:prod": "docker compose -f docker-compose.cli.yml down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:prod": "docker compose -f docker-compose.cli.yml logs -f",
    "docker:ps": "docker compose ps",
    "docker:exec": "docker compose exec server sh",
    "docker:clean": "yarn docker:stop && yarn docker:stop:prod && yarn clean:docker",
    "validate:env": "node scripts/validate-env.js",
    "validate:env:fix": "node scripts/validate-env.js --fix",
    "docker:init:validate": "yarn docker:init && yarn validate:env",
    "docker:dev:validate": "yarn validate:env && yarn docker:dev",
    "docker:prod:validate": "yarn validate:env && yarn docker:prod",
    "docker:test:validate": "yarn validate:env && yarn docker:test"
  },
  "dependencies": {
    "express": "4.18.2",
    "winston": "3.11.0",
    "express-rate-limit": "7.1.5",
    "helmet": "7.1.0",
    "cors": "2.8.5",
    "commander": "11.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/preset-env": "7.23.7",
    "@jest/globals": "29.7.0",
    "jest": "29.7.0",
    "supertest": "7.0.0",
    "nodemon": "3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src",
      "client"
    ],
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "ISC"
}
