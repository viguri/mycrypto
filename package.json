{
  "name": "mycrypto",
  "version": "1.0.0",
  "description": "A simple blockchain implementation with Docker support and environment validation",
  "type": "module",
  "main": "src/server.js",
  "scriptComments": {
    "app": "Application scripts for local development and production",
    "test": "Testing and coverage scripts",
    "clean": "Cleanup scripts for various components",
    "prepare": "Environment preparation scripts",
    "docker": "Docker-related scripts for different environments",
    "validate": "Environment validation scripts"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "start:prod": "cross-env NODE_ENV=production node src/server.js",
    "dev:frontend": "vite",
    "dev:backend": "cross-env NODE_ENV=development nodemon src/server.js",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:debug": "cross-env NODE_ENV=development DEBUG=mycrypto:* nodemon src/server.js",
    "test": "cross-env NODE_ENV=test DISABLE_LOGGING=true jest --detectOpenHandles --forceExit --config jest.config.cjs",
    "test:watch": "cross-env NODE_ENV=test jest --watch --config jest.config.cjs",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --config jest.config.cjs",
    "test:e2e": "cross-env NODE_ENV=test jest --config jest.config.cjs --testMatch='**/*.e2e.test.js'",
    "test:ui": "cross-env NODE_ENV=test jest --config jest.config.cjs --testMatch='**/ui/**/*.test.{js,jsx}'",
    "test:ui:watch": "yarn test:ui --watch",
    "test:ui:coverage": "yarn test:ui --coverage",
    "test:ui:security": "cross-env NODE_ENV=test jest --config jest.config.cjs --testMatch='**/ui/**/*.security.test.{js,jsx}'",
    "clean": "rimraf node_modules",
    "clean:full": "yarn clean && rimraf yarn.lock",
    "clean:logs": "rimraf logs/*",
    "clean:docker": "docker system prune -f && docker volume prune -f",
    "reinstall": "yarn clean && yarn install",
    "prepare:dev": "cross-env NODE_ENV=development yarn install",
    "prepare:prod": "cross-env NODE_ENV=production yarn install --production",
    "docker:init": "copyfiles -f docker/env/development.env.example docker/env/.env.development && copyfiles -f docker/env/production.env.example docker/env/.env.production && copyfiles -f docker/env/test.env.example docker/env/.env.test",
    "docker:dev": "docker compose --env-file docker/env/.env.development up",
    "docker:dev:build": "docker compose --env-file docker/env/.env.development up --build",
    "docker:prod": "docker compose -f docker-compose.cli.yml --env-file docker/env/.env.production up -d",
    "docker:prod:build": "docker compose -f docker-compose.cli.yml --env-file docker/env/.env.production up -d --build",
    "docker:test": "docker compose --env-file docker/env/.env.test up",
    "docker:test:build": "docker compose --env-file docker/env/.env.test up --build",
    "docker:stop": "docker compose down",
    "docker:stop:prod": "docker compose -f docker-compose.cli.yml down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:prod": "docker compose -f docker-compose.cli.yml logs -f",
    "docker:ps": "docker compose ps",
    "docker:exec": "docker compose exec server powershell",
    "docker:clean": "yarn docker:stop && yarn docker:stop:prod && yarn clean:docker",
    "validate:env": "node scripts/validate-env.js",
    "validate:env:fix": "node scripts/validate-env.js --fix",
    "docker:init:validate": "yarn docker:init && yarn validate:env",
    "docker:dev:validate": "yarn validate:env && yarn docker:dev",
    "docker:prod:validate": "yarn validate:env && yarn docker:prod",
    "docker:test:validate": "yarn validate:env && yarn docker:test"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "commander": "11.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "2.8.5",
    "crypto-js": "4.2.0",
    "dotenv": "16.4.5",
    "express": "4.20.0",
    "express-rate-limit": "7.1.5",
    "express-session": "1.18.0",
    "helmet": "7.1.0",
    "mycrypto": "file:",
    "openai": "^4.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "9.0.1",
    "vite": "^5.1.4",
    "winston": "3.11.0"
  },
  "resolutions": {
    "body-parser": "^1.20.3",
    "cookie": "^0.7.0",
    "path-to-regexp": "^0.1.10",
    "send": "^0.19.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/plugin-transform-proto-to-assign": "^7.23.3",
    "@babel/preset-env": "7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@jest/globals": "29.7.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^8.2.2",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "cypress": "^13.6.6",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "3.0.2",
    "rimraf": "5.0.5",
    "supertest": "7.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "verbose": true,
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src",
      "client"
    ],
    "testTimeout": 30000,
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/tests/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@testing-library|react|react-dom)/)"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "ISC"
}
